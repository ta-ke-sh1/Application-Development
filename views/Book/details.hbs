<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>FPT Bookstore</title>
        <style>
            h1 {
                font-size: 30px;
            }

            br {
                margin-top: -20px;
            }

            p {
                font-size: 18px;
            }

            .description {
                width: 500px;
                text-align: justify;
                max-height: 350px;
                overflow: auto;
            }

            .value-button {
                align-items: center;
                background-color: white;
                border: 1px solid #CDCDCE;
                width: 40px;
                height: 40px;
                text-align: center;
                vertical-align: middle;
                padding: 11px 0;
                font-family: 30px;
                z-index: 2;
            }

            form #decrease {
                margin-left: 20px;
                margin-right: -4px;
                border-radius: 8px 0 0 8px;
            }

            form #increase {
                margin-left: -4px;
                border-radius: 0 8px 8px 0;
            }

            .quantity {
                display: flex;
            }

            .quantity #number {
                width: 100px;
                height: 40px;
                text-align: center;
                font-family: 30px;
                border: none;
                border-top: 1px solid #CDCDCE;
                border-bottom: 1px solid #CDCDCE;
            }

        </style>
    </head>

    <body>
        {{> header }}
        <br>
        <div class="container" style="margin-top: 20px">
            <br>
            <div class="row">
                <div class="col">
                    <img src="/Books/{{ book.image }}" height="750px" style="margin-right: -100px;">
                </div>
                <div class="col" style="width: 500px;">
                    <form action="addToCart" method="POST" class="ui form" enctype="multipart/form-data">
                        <div class="field">
                            <h1>{{ book.name }}</h1>
                        </div>
                        <br>
                        <div class="field">
                            <h2>Categories</h2>
                            <p>
                                {{#each book.category}}
                                    <span style="padding: 4px 8px;
                                                background-color: #E9E8E8;
                                                margin: 10px 0px;
                                                margin-right: 6px; 
                                                border-radius: 6px;
                                                font-weight: bold;
                                                border: 1px solid #CDCDCE;">
                                        {{this}}
                                    </span>
                                {{/each}}
                            </p>
                        </div>
                        <br>
                        <div class="two fields">
                            <div class="field">
                                <h2>Author</h2>
                                <p>{{book.author}}</p>
                            </div>
                            <div class="field">
                                <h2>Publisher</h2>
                                <p>{{book.publisher}}</p>
                            </div>
                        </div>
                        <br>
                        <div class="field">
                            <h2>Description</h2>
                            <p class="description">{{ book.description }}</h1>
                        </div>
                        <br>
                        <div class="two fields">
                            <div class="field">
                                <h2>Price</h2>
                                <p> ${{ book.price}}</p>
                            </div>
                            <div class="field">
                                <h2>Status</h2>
                                <p> {{available book.quantity}} </p>
                            </div>
                        </div>
                        <br>
                        <div class="field">
                            <div class="quantity">
                                <h2>Quantity: </h2>
                                <div class="value-button" id="decrease" onclick="decreaseValue()"
                                     value="Decrease Value">
                                    <center>
                                        -
                                    </center>
                                </div>
                                <center>
                                    <input type="number" name="numQuantity" id="number" class="inp">
                                </center>
                                <div class="value-button" id="increase" onclick="increaseValue()"
                                     value="Increase Value">
                                    <center>
                                        +
                                    </center>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <input type="submit" value="Add to Cart" class="inp" id="btn_Save" style="width: 500px;">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
    <script>
        function increaseValue() {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            value++;
            document.getElementById('number').value = value;
        }

        function decreaseValue() {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            value < 1 ? value = 1 : '';
            value--;
            document.getElementById('number').value = value;
        }
    </script>

</html>
