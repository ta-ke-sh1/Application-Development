<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>FPT Bookstore</title>
        <style>
            .book-name {
                font-family: Editor;
                font-size: 40px;
            }

            p {
                font-size: 18px;
            }

            .description {
                width: 100%;
                text-align: justify;
                max-height: 350px;
                min-height: 150px;
                overflow: auto;
            }

            .value-button {
                align-items: center;
                background-color: white;
                border: 1px solid #CDCDCE;
                width: 40px;
                height: 40px;
                text-align: center;
                vertical-align: middle;
                padding: 11px 0;
                font-family: 30px;
                z-index: 2;
            }

            form #decrease {
                margin-left: 20px;
                margin-right: -4px;
                border-radius: 8px 0 0 8px;
            }

            form #increase {
                margin-left: -4px;
                border-radius: 0 8px 8px 0;
            }

            .quantity {
                display: flex;
            }

            .quantity #number {
                width: 100px;
                height: 40px;
                text-align: center;
                font-family: 30px;
                border: none;
                border-top: 1px solid #CDCDCE;
                border-bottom: 1px solid #CDCDCE;
            }

            .img {
                background-size: cover;
                background-repeat: no-repeat;
                background-position: center;
                height: 780px;
                width: 540px;
                margin-left: -50px;
                margin-top: 10px;
            }

            h2 {
                font-size: 20px;
            }

            .rating-books {
                position: absolute;
                background-color: white;
                border: 1px solid #CDCDCE;
                border-radius: 12px;
                top: 10px;
                right: 10px;
                padding: 6px 10px 0px 10px;
                scale: 0.8;
            }

            #middle{
                border-left: 1px solid #CDCDCE;;
                border-right: 1px solid #CDCDCE;;
                padding: 0px 20px;
                margin: 0px 16px;
            }
            #info p{
                padding-top: 4px;
            }
        </style>
    </head>

    <body>
        {{> header }}
        <br>
        <div class="container">
            <br><br>
            <div class="row" >
                <div class="col">
                    <div class="img" style="background-image: url('/Books/{{ book.image }}');">
                    </div>
                </div>
                <div class="col" style="width: 500px; margin-top: 15px">
                    <form action="user/addCart" method="POST" class="ui form" enctype="multipart/form-data">
                        <input type="hidden" name="txtID" value="{{book._id}}">
                        <div class="field">
                            <p class="book-name">{{ book.name }}</p>
                        </div>
                        <hr>
                        <div class="fields" id="info">
                            <div class="field">
                                <div class="rating">
                                    <p>Rating: {{ book.rating }}/5 -
                                        <span class="stars" data-rating={{ book.rating}}
                                              data-num-stars="5"></span>
                                    </p>
                                </div>
                            </div>
                            <div class="field" id="middle">
                                <p>Sold: {{ book.sold }}</p>
                            </div>
                            <div class="field">
                                <p>Feedback: {{ book.quantity }}</p>
                            </div>
                        </div>
                        <script>
                            $(function () {
                                $('.stars').stars();
                            });
                        </script>
                        <div class="field">
                            <h1>${{ book.price}}</h1>
                        </div>
                        <div class="field">
                            <h3>Categories</h3>
                            <p>
                                {{#each book.category}}
                                    <a href="/book/category?cat={{this}}">
                                        <span style="padding: 4px 8px;
                                            background-color: #E9E8E8;
                                            margin: 10px 0px;
                                            margin-right: 6px; 
                                            border-radius: 6px;
                                            font-weight: bold;
                                            border: 1px solid #CDCDCE;">
                                            {{this}}
                                        </span>
                                    </a>
                                {{/each}}
                            </p>
                        </div>
                        <br>
                        <div class="three fields">
                            <div class="field">
                                <h3>Author</h3>
                                <p>{{book.author}}</p>
                            </div>
                            <div class="field">
                                <h3>Publisher</h3>
                                <p>{{book.publisher}}</p>
                            </div>
                            <div class="field">
                                <h3>Status</h3>
                                <p> {{available book.quantity}} </p>
                            </div>
                        </div>
                        <br>
                        {{#if session.isAdmin}}
                            <a href="/admin/edit?id={{ book._id }}" id="btn_Save" style="width: 500px;"
                               class="btn">Edit</a>
                            <br>
                            <a href="/admin/deleteBook?id={{ book._id }}" id="btn_Save"
                               style="width: 500px; margin-bottom: 30px" class="btn">Delete</a>
                        {{else}}
                            <div class="field">
                                <div class="quantity">
                                    <h3 style="margin-top: 7px;">Quantity: </h3>
                                    <div class="value-button" id="decrease" onclick="decreaseValue()"
                                         value="Decrease Value">
                                        <center>
                                            -
                                        </center>
                                    </div>
                                    <center>
                                        <input type="number" name="numQuantity" id="number" class="inp">
                                    </center>
                                    <div class="value-button" id="increase" onclick="increaseValue()"
                                         value="Increase Value">
                                        <center>
                                            +
                                        </center>
                                    </div>
                                    <span style="font-size: 18px; margin: 12px 0px 0px 22px">
                                        In stock: {{book.quantity}}
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <input type="submit" value="Add to Cart" class="inp" id="btn_Save"
                                       style="width: 275px;">
                            </div>
                        {{/if}}
                        <div class="field">
                            <h3>Description</h3>
                            <p class="description">{{ book.description }}</h1>
                        </div>
                        <br>
                    </form>
                </div>
            </div>
        </div>
        <br>
        <div class="block" style="height: 300px; width: 80%">
            <div class="row tags" style="display: inline;">
                <span class="heading">Feedbacks</span>
            </div>
        </div>
        <br>
        {{#if session.isAdmin}}
        {{else}}
            <div class="block" style="width: 80%">
                <div class="row tags" style="display: inline;">
                    <span class="heading">Books from this author:</span>
                </div>
                <div class="book-cards">
                    {{#each books }}
                        <div class="item">
                            <a href="/book?id={{ _id }}">
                                <div class="book-card">
                                    <div class="img-card" style="background-image: url('/Books/{{image}}');">
                                    </div>
                                    <div class="rating-books">
                                        <span class="stars" data-rating={{rating}}
                                              data-num-stars="5"></span>
                                    </div>
                                    <script>
                                        $(function () {
                                            $('.stars').stars();
                                        });
                                    </script>
                                    <div class="author">{{ author }}</div>
                                    <div class="name">{{name}}</div>
                                    <div class="btm-row">
                                        <div class="price">$ {{ price }}</div>
                                        <div class="sold">Sold: {{ sold }}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/if}}
        {{>footer}}
    </body>
    <script>
        function increaseValue() {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            value++;
            document.getElementById('number').value = value;
        }

        function decreaseValue() {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            value < 1 ? value = 1 : '';
            value--;
            document.getElementById('number').value = value;
        }

        function expand() {
            var dots = document.getElementById("dots");
            var moreText = document.getElementById("more");
            var btnText = document.getElementById("myBtn");

            if (dots.style.display === "none") {
                dots.style.display = "inline";
                btnText.innerHTML = "Read more";
                moreText.style.display = "none";
            } else {
                dots.style.display = "none";
                btnText.innerHTML = "Read less";
                moreText.style.display = "inline";
            }
        }
    </script>

</html>
