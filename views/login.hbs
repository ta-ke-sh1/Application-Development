<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Homepage</title>
    </head>

    <body>
        {{> header }}
        <br /><br />
        <center>
            <h1>Login</h1>
            <form action="/login" method="post">
                <div class="error">{{ error }}</div>
                <input type="text" name="txtUsername" id="" placeholder="Enter user name" class="inp">
                <br>
                <input type="password" name="txtPassword" id="password" placeholder="Enter password" class="inp">
                <br>
                <div class="toggle">
                    <input type="checkbox" onclick="toggleVisibility()" > Show Password
                    <span class="left"><a href="">Forgot Password?</a></span>
                </div>
                <br>
                <input type="submit" value="Log in" id="btn_Save" class="inp">
                <br>
                Not a member? <a href="/register">Register here!</a>
            </form>
        </center>
    </body>
    <script>
function toggleVisibility() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>
</html>
