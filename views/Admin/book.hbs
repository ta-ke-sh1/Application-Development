<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Index</title>
        <style>
            .widget {
                width: 90%;
            }

            .widget table {
                max-height: 600px;
                overflow: scroll;
            }

        </style>
    </head>

    <body>
        {{> adminHeader }}
        {{> cursor }}
        <center>
            <h1>Admin Index</h1>
            <div class="widget">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <input type="search" name="" id="" class="inp" placeholder="Search a book">
                        </div>
                        <div class="col">
                            <a href="/admin/addBook" class="button">Add Book</a>
                        </div>
                    </div>
                    <div class="row"></div>
                </div>
                <table style="border: 1px solid black;" class="tbl">
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Author</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Image</th>
                        <th>Option</th>
                    </tr>
                    {{#each books}}
                        <tr>
                            <td>{{indexFix @index 1}}</td>
                            <td><span class="name">{{name}}</span></td>
                            <td>
                                {{ category }}
                            </td>
                            <td>{{author}}</td>
                            <td>{{description}}</td>
                            <td>{{price}}</td>
                            <td>{{quantity}}</td>
                            <td><img src="/Books/{{image}}" height="100px">
                            </td>
                            <td>
                                <a href="/admin/edit?id={{ _id }}" class="btn">
                                    Edit
                                </a>
                                <a href="/admin/deleteBook/{{ _id }}" class="btn"
                                   onclick="return confirm('Do you want to delete this book ?' {{_id}});">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </center>
    </body>

</html>
