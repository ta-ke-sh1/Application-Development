<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Index</title>
        <style>
            .widget {
                width: 90%;
                max-height: 700px;
                overflow: auto;
                padding: 0px 12px;
            }

            .widget th {
                position: sticky;
                top: 0;
                z-index: 2;
                background-color: white;
                border-top: 1px solid red;
                box-shadow: rgba(0, 0, 0, 0.08) 0px 10px 20px,
                    rgba(0, 0, 0, 0.05) 0px 6px 6px;
            }

            .widget::-webkit-scrollbar {
                display: none;
            }

        </style>
    </head>

    <body>
        {{> header }}
        <center>
            <h1>Admin Index</h1>
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <form action="/book/search" method="POST">
                            <input type="search" name="txtKeyword" id="" class="inp" placeholder="Search a book">
                        </form>
                    </div>
                    <div class="col">
                        <a href="/admin/addBook" class="button">Add Book</a>
                    </div>
                </div>
                <div class="row"></div>
            </div>
            <div class="block">
            <form action="/book/advanceSearch" method="GET" class="ui form">
                <h4 class="ui dividing header">Advanced Search</h4>
                <div class="fields">
                    <div class="field">
                        <label>Name</label>
                        <input type="text" name="key" id="" style="width: 280px;" placeholder="Enter any keyword">
                    </div>
                    <div class="field">
                        <label>Author</label>
                        <input type="text" name="key" id="" style="width: 280px;" placeholder="Enter any Author">
                    </div>
                    <div class="field">
                        <label>Publisher</label>
                        <input type="text" name="key" id="" style="width: 280px;" placeholder="Enter any Publisher">
                    </div>
                    <div class="field">
                        <label>Category</label>
                        <select name="txtCategory" id="multi-select" multiple="" class="ui dropdown search inp"
                                style=" width: 300px;">
                            <option value="">Select one</option>
                            {{#each categories}}
                                <option value="{{name}}" type="checkbox">{{name}}</option>
                            {{/each}}
                        </select>
                        <script>
                            $('#multi-select').dropdown(
                                { maxSelections: 1 }
                            );
                        </script>
                    </div>
                    <div class="field">
                        <label>Max Price</label>
                        <input type="number" name="key" id="" style="width: 110px;">
                    </div>
                    <div class="field">
                        <button class="ui button" type="submit" style="width: 280px; margin-top: 27px">Search</button>
                    </div>
                </div>
            </form>
            <script type="text/javascript">
                function rangeSlide(value) {
                    document.getElementById('rangeValue').innerHTML = value;
                }
            </script>
        </div>
            <div class="widget">
                <table class="ui padded selectable fixed table tbl">
                    <tr>
                        <th style="width: 60px;">No</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th class="center aligned">Price ($)</th>
                        <th class="center aligned">Stock</th>
                        <th class="center aligned">Popularity</th>
                        <th class="center aligned">Image</th>
                        <th class="center aligned">Option</th>
                    </tr>
                    {{#each books}}
                        <tr>
                            <td style="width: 60px;">{{indexFix @index }}</td>
                            <td><span class="name">{{name}}</span></td>
                            <td>
                                {{#each category }}
                                    <p style="font-family: Maison-demi;">{{this}}</p>
                                {{/each}}
                            </td>
                            <td>{{author}}</td>
                            <td>{{publisher}}</td>
                            <td class="center aligned">{{price}}</td>
                            <td class="center aligned">{{quantity}}</td>
                            <td class="center aligned">{{popularity}}</td>
                            <td class="center aligned"><img src="/Books/{{image}}" height="160px">
                            </td>
                            <td class="center aligned">
                                <a href="/admin/edit?id={{ _id }}" class="btn">
                                    Edit
                                </a>
                                <br>
                                <a href="/admin/deleteBook?id={{ _id }}" class="btn"
                                   onclick="return confirm('Do you want to delete this book ?' {{name}});">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </center>
    </body>

</html>
